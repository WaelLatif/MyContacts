<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="Deprecated">

    <Button
        android:id="@+id/btnOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="207dp"
        android:text="@string/open_contacts" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="394dp"
        android:layout_height="53dp"
        android:layout_marginTop="75dp"
        android:layout_x="0dp"
        android:layout_y="39dp"
        android:text="@string/no_name_selected"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNum"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:layout_x="6dp"
        android:layout_y="98dp"
        android:text="@string/no_number_selected"
        android:textColor="#00f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="32dp"
        android:layout_x="243dp"
        android:layout_y="207dp"
        android:text="@string/get_contacts"
        app:layout_constraintStart_toStartOf="@+id/btnOpen"
        app:layout_constraintTop_toBottomOf="@+id/btnOpen" />

    <EditText
        android:id="@+id/txtContacts"
        android:layout_width="388dp"
        android:layout_height="362dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_x="7dp"
        android:layout_y="356dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContact"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnGoToContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="273dp"
        android:text="Go to Contact Screen" />
</AbsoluteLayout>